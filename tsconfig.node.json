{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "target": "ES2020",
    "lib": [ "ES2020" ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,

    // Emit somewhere outside src
    "declaration": true,
    "declarationDir": "./.types/node",
    "emitDeclarationOnly": true,
    "outDir": "./.tsbuild/node"
  },
  "include": [ "vite.config.ts", "scripts/**/*.ts" ]
}
